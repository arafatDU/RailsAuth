<div class="d-flex justify-content-center align-items-center" style="height: 110vh;">
  <div class="card" style="width: 25rem;">
    <div class="card-header">
      <h2>Sign Up</h2>
    </div>
    <div class="card-body" style="padding: 1rem;">
    
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <ul>
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class:"form-control", autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field form-group">
    <%= f.label :position %><br />
    <%= f.text_field :position, class:"form-control", autofocus: true, autocomplete: "position" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
<% end %>
  <br>
<%= render "devise/shared/links" %>

    </div>
  </div>
</div>

